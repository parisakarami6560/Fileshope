@using Filshopfil.DataLayer.entites.product;
@model Product

@{
    ViewData["title"] = "محصولات";
}
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            ویرایش محصول
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <form method="post" asp-action="EditProduct" role="form" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="FileName" />
                        <input type="hidden" asp-for="ImageName" />
                        <div class="form-group">
                            <label>نام محصول</label>
                            <input asp-for="Name" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>گروه بندی</label>
                            <select asp-for="ProductGroupId" asp-items="@(ViewData["groups"] as SelectList)" class="form-control"></select>
                        </div>
                        <div class="form-group">
                            <label>توصیحات کوتاه</label>
                            <textarea asp-for="ShortDesc" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>قیمت</label>
                            <textarea asp-for="Price" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>توضیحات تکمیلی</label>
                            <textarea asp-for="Body" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>فایل</label>
                            <input type="file" name="File" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>تصویر</label>
                            <input type="file" name="ImageFile" class="form-control">
                        </div>

                        <button class="btn btn-success">ویرایش</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
